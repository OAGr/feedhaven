<table class="table table-bordered">
  <tr>
    <th>published</th>
    <th>id</th>
    <th>title</th>
    <th>summary</th>
    <th>link</th>
    <th>content</th>
    <th>dump</th>
    <th>author</th>
    <th>edit</th>
  </tr>

  <%@entries.each do |entry| %>
    <tr>
    <td><%= entry.published.strftime("%m/%d/%Y %I:%M%p")  %></td>
    <td><%= link_to entry.id, feed_entry_path(entry.feed_id,entry) %></td>
    <td><%= entry.title %></td>
    <td><%= entry.summary %></td>
    <td><%= entry.link %></td>
    <td><%= entry.content %></td>
    <td><%= entry.dump %></td>
    <td><%= entry.author.name %></td>
    <td>
      <% unless entry.published === entry.updated %>
        <%= entry.updated.strftime("%m/%d/%Y %I:%M%p")%>
    <% end %>
    </td>
    <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_feed_entry_path(entry.feed_id, entry) %></td>
    <td><%= link_to raw('<i class="icon-remove"></i>'), feed_entry_path(entry.feed_id, entry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>

<% end %>

</table>

