<%= form_for [@feed, @entry] do |f| %>
  <% if @entry.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>
  <ul>
    <% @entry.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
  </ul>
</div>
  <% end %>
  <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title%>
    </div>
    <hr>
<div class="row">
  <div class="span5">
  
    <strong>Extra Entry Information</strong>
    <div class="field">
      <%= f.label :summary %>
      <%= f.text_field :summary %>
    </div>
    <div class="field">
      <%= f.label :link %>
      <%= f.text_field :link %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content, :rows => "5" %>
    </div>
  </div>
  <div class="span4">

    <strong>Author Information</strong>
    <%= f.fields_for @entry.author do |p| %>
      <div class="field">
      <%= p.label :name %>
      <%= p.text_field :name %>
    </div>
    <div class="field">
      <%= p.label :email %>
      <%= p.text_field :email %>
    </div>
    <div class="field">
      <%= p.label :uri %>
      <%= p.text_field :uri%>
    </div>
  <% end %>
  </div>
</div>


<div class="actions">
  <%= f.submit 'Submit', :class => 'btn btn-primary' %>
</div>
<% end %>
